@{
    ViewData["Title"] = "Add Pet";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

@model PetModel;
<div class="card">
    <div class="card-header">
        <strong>Add New</strong>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="Pets" asp-action="Save" enctype="multipart/form-data">

            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Pemilik</label>
                    @Html.DropDownListFor(x => x.idpemilik, (IEnumerable<SelectListItem>)ViewData["ListPemilik"], new { @class = "form-control" })
                </div>
                <div class="form-group col-md-6">
                    <label>Klasifikasi</label>
                    @Html.DropDownListFor(x => x.idklasifikasi, (IEnumerable<SelectListItem>)ViewData["ListKlasifikasi"], new { @class = "form-control" })
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Sex</label>
                    <select id="sex" class="form-control" asp-for="sex">
                        <option value="1">Male</option>
                        <option value="2">Female</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label>Nama</label>
                    <input type="text" class="form-control" id="nama" asp-for="nama" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Jenis</label>
                    <input type="text" class="form-control" id="jenis" asp-for="jenis" />
                </div>
                <div class="form-group col-md-6">
                    <label>Warna</label>
                    <input type="text" class="form-control" id="warna" asp-for="warna" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label>Pola</label>
                    <input type="text" class="form-control" id="pola" asp-for="pola" />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">
                        <button type="submit" class="btn btn-danger">Save</button>
                        <button type="reset" class="btn btn-primary">Clear</button>
                        <button type="button" class="btn btn-info" onclick="toList();">Back</button>
                </div>
            </div>
        </form>
    </div>
</div>



<script>
   
    function toList() {
        window.location = "/pets/List";
    };
    

    
</script>