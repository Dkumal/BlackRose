@{
    ViewData["Title"] = "List User";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}

@using Black_Rose.Models;
@model  Black_Rose.Models.UserModels;

<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">List User</h3>
        </div>
        <div class="card-body">
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        @*<td>No</td>*@
                        <td>User Name</td>
                        <td>Name</td>
                        <td>Role</td>
                        <td colspan="2" align="center">Action</td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var data in ViewData["users"] as IEnumerable<Black_Rose.Models.UserModels>)
                    {
                        <tr>
                            <td>@data.username</td>
                            <td>@data.fullname</td>
                            @if (data.roleid == 1)
                            {
                                <td>Dokter</td>
                            }
                            else
                            {
                                <td>Pegawai</td>
                            }
                            <td><a href="/user/editpage/@data.id">Edit</a></td>
                            <td><a href="/user/delete/@data.id">Delete</a></td>

                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
   
    <button type="button" class="btn btn-primary" onclick="ToCreate()">New User</button>

</div>

<script>
    function ToCreate() {
        window.location = "/User/AddPage";
    };
</script>
