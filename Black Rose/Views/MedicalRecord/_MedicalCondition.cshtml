@model ExaminationFormModel;

<h1>Medical Condition</h1>
<div class="form-row">
    <div class="form-group col-md-6">
        <label>Age</label>
        <input type="number" asp-for="age" class="form-control" />
    </div>
</div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Species</label>
            <input type="text" id="petspecies" name="petspecies" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Breed</label>
            <input type="text" id="petbreed" name="petbreed" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Sex</label>
            <input type="text" id="petsex" name="petsex" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Weight</label>
            <input type="number" asp-for="weight" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Temperature</label>
            <input type="text" asp-for="temperature" class="form-control" />
        </div>
    </div>
    <div class="form-row">
        <div class="form-group">
            <label>Body Score / Nutrition</label>
            <div class="form-row" style="margin-left:10px">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio1" value="1">
                    <label class="form-check-label" for="inlineRadio1">1</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio2" value="2">
                    <label class="form-check-label" for="inlineRadio2">2</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio3" value="3">
                    <label class="form-check-label" for="inlineRadio3">3</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio4" value="4">
                    <label class="form-check-label" for="inlineRadio4">4</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio3" value="5">
                    <label class="form-check-label" for="inlineRadio5">5</label>
                </div>
            </div>
            
        </div>
    </div>
<div class="form-row">
    <div class="form-group">
        <label>Diet</label>
        <input type="text" asp-for="petdiet" class="form-control" />
    </div>
</div>
