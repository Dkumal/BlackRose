@{
    ViewData["Title"] = "Examination";
    Layout = "~/Views/Shared/admin/_Layout.cshtml";
}
@model ExaminationFormLoadModel;
@{ 
    ExaminationFormLoadModel data = (ExaminationFormLoadModel)ViewData["Data"];

}
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Examination Form</h3>
    </div>
    <div class="card-body">
        <form method="post" asp-controller="MedicalRecord" asp-action="SaveExam">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <img src="~/lib/image/20200814_164206.jpg" class="img-fluid img-thumbnail" />
                </div>
                <div class="form-group col-md-8">
                    <div class="col-md-12">
                        <label>Owner</label>
                        <input type="text" id="owner" name="owner" class="form-control" value="@data.examdata.owner" disabled="disabled" />
                    </div>
                    <div class="col-md-12">
                        <label>Date</label>
                        <input type="date" asp-for="examdate" class="form-control" value="@data.examdate" disabled ="disabled"/>
                    </div>
                    <div class="col-md-12">
                        <label>Pet's Name</label>
                        <input type="text" id="petname" name="petname" class="form-control" value="@data.examdata.namahewan" disabled="disabled" />
                        <input type="hidden" asp-for="idhewan" value="@data.idhewan" />
                    </div>
                    <div class="col-md-12">
                        <label>Examiner</label>
                        <input type="text" id="doktername" name="doktername" class="form-control" value="@data.namadokter" disabled="disabled"  />
                        <input type="hidden" asp-for="iddokter" class="form-control" value="1" />
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-6">
                    <h1>Medical Condition</h1>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Age</label>
                            <input type="number" asp-for="age" class="form-control" value="@data.age" disabled="disabled"/>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Species</label>
                            <input type="text" id="petspecies" name="petspecies" class="form-control" value="@data.examdata.species" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Breed</label>
                            <input type="text" id="petbreed" name="petbreed" class="form-control" value="@data.examdata.breed" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Sex</label>
                            <input type="text" id="petsex" name="petsex" class="form-control" value="@data.examdata.sex" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Weight</label>
                            <input type="number" asp-for="weight" class="form-control" value="@data.weight" disabled="disabled" />
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label>Temperature</label>
                            <input type="text" asp-for="temperature" class="form-control" value="@data.temperature" disabled="disabled"/>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Body Score / Nutrition</label>
                            <div class="form-row" style="margin-left:10px">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio1" value="1">
                                    <label class="form-check-label" for="inlineRadio1">1</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio2" value="2">
                                    <label class="form-check-label" for="inlineRadio2">2</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio3" value="3">
                                    <label class="form-check-label" for="inlineRadio3">3</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio4" value="4">
                                    <label class="form-check-label" for="inlineRadio4">4</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" asp-for="bodyscore" id="inlineRadio3" value="5">
                                    <label class="form-check-label" for="inlineRadio5">5</label>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Diet</label>
                            <input type="text" asp-for="petdiet" class="form-control" value="@data.petdiet" disabled="disabled"/>
                        </div>
                    </div>

                </div>
                <div class="col-md-6">
                    <h1>Medical History</h1>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Eating</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="eating" id="Eating1" value="1">
                                <label class="form-check-label" for="inlineRadio1">Y</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="eating" id="Eating2" value="0">
                                <label class="form-check-label" for="inlineRadio2">N</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Drinking</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="drinking" id="Drinking1" value="1">
                                <label class="form-check-label" for="inlineRadio1">Y</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="drinking" id="Drinking2" value="0">
                                <label class="form-check-label" for="inlineRadio2">N</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Coughing</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="coughing" id="Coughing1" value="1">
                                <label class="form-check-label" for="inlineRadio1">Y</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="coughing" id="Coughing2" value="0">
                                <label class="form-check-label" for="inlineRadio2">N</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Sneezing</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="sneezing" id="Sneezing1" value="1">
                                <label class="form-check-label" for="inlineRadio1">Y</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="sneezing" id="Sneezing2" value="0">
                                <label class="form-check-label" for="inlineRadio2">N</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Diarhea</label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="diarhea" id="Diarhea1" value="1">
                                <label class="form-check-label" for="inlineRadio1">Y</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" asp-for="diarhea" id="Diarhea2" value="0">
                                <label class="form-check-label" for="inlineRadio2">N</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Last Medication</label>
                            <textarea class="form-control" id="lastmedication" asp-for="lastmedication"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="col-md-12">
                    <h1>Medical Anamnesa</h1>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Owner's Health Concern</label>
                            <textarea class="form-control" id="healthconcern" asp-for="healthconcern" style="min-width: 100%"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group  col-md-12">
                            <label>Physical Examination</label>
                            <textarea class="form-control" id="physicalexam" asp-for="physicalexam"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group  col-md-12">
                            <label>Physical Examination</label>
                            <textarea class="form-control" id="diagnose" asp-for="diagnose"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Needs</label>
                            <textarea class="form-control" id="need" asp-for="need"></textarea>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group  col-md-12">
                            <label>Service</label>
                            <textarea class="form-control" id="service" asp-for="service"></textarea>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <label>Therapy</label>
                            <textarea class="form-control" id="lastmedication" asp-for="therapy"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-12">

                    <button type="submit" class="btn btn-danger">Save</button>

                    <button type="reset" class="btn btn-primary">Clear</button>

                    <button type="button" class="btn btn-info" onclick="toList();">Back</button>

                </div>
            </div>
        </form>

    </div>
</div>


    <script>
        var datamodel = '@ViewData["Data"]';
      
        function toList() {
            window.location = "https://localhost:44360/pets/List";
        };


        function LoadDatatoTextArea() {
           
            document.getElementById("healthconcern").value = "test";
        };
        LoadDatatoTextArea();

    </script>

